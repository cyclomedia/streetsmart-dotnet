<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>net6.0-windows7.0;net48</TargetFrameworks>
		<Nullable>enable</Nullable>
		<!--<Runtime>x64</Runtime>
		<Platform>windows7.0</Platform>-->
